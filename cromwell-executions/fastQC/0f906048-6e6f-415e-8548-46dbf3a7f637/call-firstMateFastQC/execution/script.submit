#!/bin/bash
# make sure there is no preexisting Docker CID file
rm -f /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC/execution/docker_cid
# run as in the original configuration without --rm flag (will remove later)
docker run \
  --cidfile /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC/execution/docker_cid \
  -i \
   \
  --entrypoint /bin/bash \
  -v /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC:/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC:delegated \
  quay.io/biocontainers/fastqc@sha256:319b8d4eca0fc0367d192941f221f7fcd29a6b96996c63cbf8931dbb66e53348 /cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC/execution/script

# get the return code (working even if the container was detached)
rc=$(docker wait `cat /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC/execution/docker_cid`)

# remove the container after waiting
docker rm `cat /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/0f906048-6e6f-415e-8548-46dbf3a7f637/call-firstMateFastQC/execution/docker_cid`

# return exit code
exit $rc
