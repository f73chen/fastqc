#!/bin/bash
# make sure there is no preexisting Docker CID file
rm -f /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml/execution/docker_cid
# run as in the original configuration without --rm flag (will remove later)
docker run \
  --cidfile /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml/execution/docker_cid \
  -i \
   \
  --entrypoint /bin/bash \
  -v /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml:/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml:delegated \
  quay.io/biocontainers/fastqc@sha256:319b8d4eca0fc0367d192941f221f7fcd29a6b96996c63cbf8931dbb66e53348 /cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml/execution/script

# get the return code (working even if the container was detached)
rc=$(docker wait `cat /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml/execution/docker_cid`)

# remove the container after waiting
docker rm `cat /home/ubuntu/repos/fastqc/cromwell-executions/fastQC/731631fa-68d6-40aa-93c9-29cf96057cee/call-firstMateHtml/execution/docker_cid`

# return exit code
exit $rc
